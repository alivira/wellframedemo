
<div class="row">
  <div class="span6 offset3" align="middle">
    <%= form_for(@caremanager) do |f| %>
      <% if @caremanager.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@caremanager.errors.count, "error") %> prohibited this patient from being saved:</h2>

          <ul>
              <% @caremanager.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
      <% end %>
      <table>
        <tr>
          <td><%= f.label :name %></td>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
        </tr>

        <tr>
          <td><%= f.label :password_confirmation, "Confirmation" %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>                        
      </table>
      
    <br>
    <br>
    <div class="actions">
      <%= f.submit "Create Care Manager", class: "btn btn-large btn-primary"  %>
    </div>
  <% end %>
</div>
</div>